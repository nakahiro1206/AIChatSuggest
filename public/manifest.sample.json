{
    "manifest_version": 3,
    "name": "My Extension",
    "version": "1.0",
    "description": "chrome extension for AI chat support",
    "host_permissions": [], 
    "permissions": [
      "storage",
      "scripting", 
      "tabs", 
      "offscreen"
    ],
    "background": {
      "service_worker": "service_worker.js",
      "type": "module"
    }, 
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
  